@model LAB3.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>@Model.Price.ToString("N0") VNĐ</td>
    </tr>
</table>