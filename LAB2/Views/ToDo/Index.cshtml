@model List<LAB2.Models.ToDoItem>

<h1>Todo List</h1>
<a asp-action="Add" class="btn btn-primary mb-3">Add Task</a>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>STT</th>
            <th>Task</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Task</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-warning">Edit</a>
                    <a class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
